@model IEnumerable<ImpecableJB.Models.Producto>

@{
    int id = 29;
}
@foreach (var item in @Model)
{
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100" style="background-image: linear-gradient(to top, #dfe9f3 0%, white 100%);">
            <img class="card-img-top" src="@Url.Content(item.imagen)">
            <div class="card-body">
                <h5 class="card-title" style="text-align:center">
                    @Html.DisplayFor(modelItem => item.nombre)
                </h5>
                <p class="card-text" style="text-align:justify center">
                    <div class="collapse multi-collapse" id="leermas_@id">
                        @Html.DisplayFor(model => item.descripcion)<br />
                        <small><b>@Html.LabelFor(model => item.Tipo_Producto): </b>@Html.DisplayFor(model => item.Tipo_Producto.nombre)</small>
                    </div>
                </p>
            </div>
            <div class="card-footer">
                <h5 style="text-align:center">@Html.DisplayFor(modelItem => item.precio)</h5>
                <a id="leer" class="btn btn-block btn-outline-light colorchange" style="background-color:#8fc3dd" data-toggle="collapse" href="#leermas_@id" aria-expanded="false" aria-controls="colapsableleer"><i class="fa fa-address-book fa-lg"></i> Detalles del producto</a>
                <a class="btn btn-block btn-outline-light colorchange" style="background-color:#8fc3dd" href="@Url.Action("AgregarCarrito","Carrito",new { id=item.idProducto})"><i class="fa fa-shopping-cart fa-lg"></i> Agregar al carrito</a>

            </div>
        </div>
    </div>
    id++;
}
