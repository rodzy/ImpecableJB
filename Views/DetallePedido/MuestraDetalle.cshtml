@model IEnumerable<ImpecableJB.Models.Detalle_Pedido>

@{
    ViewBag.Title = "Detalle pedido";
}
<style>
    body {
        background: grey;
        margin-top: 120px;
        margin-bottom: 120px;
    }
</style>
<h2>Detalle del pedido</h2>

<div>
    <h4>Información detallada para el pedido</h4>
    <hr />
    <dl class="dl-horizontal">
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producto.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producto.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descuento)
