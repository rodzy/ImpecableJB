<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="row p-5">
                        <div class="col-md-6">
                            <img src="~/Content/LogoImpecable2.png" style="width:70px" />
                        </div>

                        <div class="col-md-6 text-right">
                            <p class="font-weight-bold mb-1">Número de pedido @Html.DisplayFor(model => model.Pedido.idPedido)</p>
