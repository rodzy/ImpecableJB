                <td>
                    @Html.DisplayFor(modelItem => item.fecha_hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "MuestraDetalle", "DetallePedido", new { id = item.idPedido }) @*|
