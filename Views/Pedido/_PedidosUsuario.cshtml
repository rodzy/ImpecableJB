@model IEnumerable<ImpecableJB.Models.Pedido>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>

